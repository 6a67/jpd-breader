{
  "manifest_version": 2,
  "name": "JPDB Browser Reader",
  "version": "1.0",
  "description": "JPDB parsing and mining in your browser",
  "icons": {
    "48": "icons/logo.svg",
    "96": "icons/logo.svg"
  },
  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "JPDB Browser Reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://reader.ttsu.app/*",
        "*://ttu-ebook.web.app/*"
      ],
      "js": [
        "content_common.js",
        "content_ttu.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "*://jpdb.io/*",
    "*://reader.ttsu.app/*",
    "*://ttu-ebook.web.app/*"
  ]
}